{
  "name": "usha-screen-sharing",
  "version": "1.0.0",
  "description": "Production-ready screen sharing application",
  "private": true,
  "workspaces": [
    "server",
    "extension",
    "viewer",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && cd server && npm install && cd ../extension && npm install && cd ../viewer && npm install && cd ../shared && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:viewer\"",
    "dev:server": "cd server && npm run dev",
    "dev:viewer": "cd viewer && npm run dev",
    "build": "npm run build:shared && npm run build:extension && npm run build:viewer && npm run build:server",
    "build:shared": "cd shared && npm run build",
    "build:extension": "cd extension && npm run build",
    "build:viewer": "cd viewer && npm run build",
    "build:server": "cd server && npm run build",
    "build:all": "./scripts/build-all.sh",
    "deploy": "./scripts/deploy.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

